@model GigHub1.ViewModels.GigFormViewModel
@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "Gigs"))
{
    <p class="alert alert-info">All fields are <strong>required</strong>.</p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <fieldset>
            @Html.LabelFor(m => m.Venue)
            @Html.TextBoxFor(m => m.Venue, new { @class = "form-control", autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.Venue)
        </fieldset>
    </div>
    <div class="form-group">
        <fieldset>
            @Html.LabelFor(m => m.Date)
            @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "eg 1 Dec 2018" })
            @Html.ValidationMessageFor(m => m.Date)
        </fieldset>
    </div>
    <div class="form-group">
        <fieldset>
            @Html.LabelFor(m => m.Time)
            @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg 20:00" })
            @Html.ValidationMessageFor(m => m.Time)
        </fieldset>
    </div>
    <div class="form-group">
        <fieldset>
            @Html.LabelFor(m => m.Genre)
            @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"),
                        "---Select Genre---", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Genre)
        </fieldset>
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


